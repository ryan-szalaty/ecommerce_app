<h1 class="text-center mt-3">Login</h1>

<%=form_with url: login_path do |form|%>
    <%=form.label :email, "Email:"%>
    <%=form.text_field :email, class: "form-control"%>
    <%=form.label :password, "Password:"%>
    <%=form.text_field :password, class: "form-control"%>
    <%=form.submit "Login"%>
<%end%>