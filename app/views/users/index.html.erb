<%if Current.user%>
    <h1>Welcome, <%=Current.user.username%></h1>
    <%=link_to "Show Profile", user_path(Current.user)%>
    <%=link_to "Sign Out", login_path, method: :delete%>
<%else%>
    <h1>Welcome, Guest</h1>
    <%=link_to "Login |", login_path%>
    <%=link_to "Sign Up", new_user_path%>
<%end%>

<%JSON.parse(HTTParty.get('https://fakestoreapi.com/products').body).each do |product|%>
    <div>
    <br>
        <p>Name: <%=product["title"]%></p>
        <p>Price(USD): <%=product["price"]%></p>
        <p>Description: <%=product["description"]%></p>
        <p>Category: <%=product["category"]%></p>
        <img src=<%=product["image"]%>>
        <p>Rating: <%=product["rating"]["rate"]%></p>
        <%=link_to "See More", store_path + "/" + product["id"]%>
    <br>
    </div>
<%end%>


