<%if Current.user%>
  <h1>Welcome, <%=Current.user.username%></h1>
  <%=link_to "Show Profile", user_path(Current.user)%>
  <%=link_to "Sign Out", login_path, method: :delete%>
<%else%>
  <h1>Welcome, Guest</h1>
  <%=link_to "Login |", login_path%>
  <%=link_to "Sign Up", new_user_path%>
<%end%>

<div>

<p><%=@product["title"]%></p>
<p>Price: <%=@product["price"]%></p>
<img src=<%=@product["image"]%>>

<%=button_to "Add to Cart", user_items_path(user_id: Current.user.id, id: @product["id"], title: @product["title"], price: @product["price"], image: @product["image"])%>

</div>

<%=link_to "Back to Store", store_index_path%>
